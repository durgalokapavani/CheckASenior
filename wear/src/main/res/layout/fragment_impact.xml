<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.SwipeDismissFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_dismiss_root_impact"
    android:background="@android:color/background_dark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linear_container">

        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/calibrate_impact_setting"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calibrationButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/helpTitle"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/calibrate_rest_setting"
            android:background="@drawable/ic_watch_24dp"
            android:foreground="@drawable/ripple_effect"/>

        <TextView
            android:id="@+id/impact_desc"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:maxLines="4"
            android:text="@string/remove_your_watch_press_button_then_drop_your_watch_from_1_ft_height_and_wait"
            android:textAlignment="center" />
    </LinearLayout>


</android.support.wear.widget.SwipeDismissFrameLayout>